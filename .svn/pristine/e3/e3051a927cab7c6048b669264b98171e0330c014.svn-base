package TestsPackage;

import static org.junit.Assert.*;

import java.awt.Color;
import java.util.ArrayList;

import models.Ball;
import models.Cloud;
import models.GameModel;
import models.Green;
import models.Hole;
import models.Position;
import models.Tee;
import models.Trap;
import models.Tree;

import org.junit.Test;

public class GameModelTest {

	@Test
	public void test() {
		Position p1 = new Position(1,1,1);
		Ball b1 = new Ball(p1, Color.BLACK, 2.0);
		Tee t1 = new Tee(p1, 2, 3);
		Cloud c1 = new Cloud(p1,2,1,3.0, "right");
		Cloud c2 = new Cloud(p1,2,1,3.0, "left");
		ArrayList<Cloud> clouds = new ArrayList<Cloud>(2);
		clouds.add(c1);
		clouds.add(c2);
		Tree tree1 = new Tree(p1,5,6);
		Tree tree2 = new Tree(p1,7,8);
		ArrayList<Tree> trees = new ArrayList<Tree>(2);
		trees.add(tree1);
		trees.add(tree2);
		Trap trap1 = new Trap(p1,1,2, "sand");
		Trap trap2 = new Trap(p1,2,3, "sand");
		ArrayList<Trap> traps = new ArrayList<Trap>(2);
		traps.add(trap1);
		traps.add(trap2);
		Green g1 = new Green(p1,7,8);
		Hole h1 = new Hole(p1,9,9);
		
		GameModel gm1 = new GameModel(1,1,1, b1, t1, "5 iron", clouds, trees, traps, g1, h1, 5);
		
		assertEquals(g1, gm1.getGreen());
		assertEquals(h1, gm1.getHole());
		assertEquals(5, gm1.getScore());
		assertEquals(trees, gm1.getTrees());
		assertEquals(traps, gm1.getTraps());
		assertEquals(clouds, gm1.getClouds());
		
	}

}
